<odoo>
    <record id="view_report_task_sprint_tree" model="ir.ui.view">
        <field name="name">view.report.task.sprint.tree</field>
        <field name="model">report.task.sprint</field>
        <field name="arch" type="xml">
            <tree string="Task Sprint Report">
                <field name="member_id"/>
                <field name="project_id"/>
                <field name="sprint_id"/>
                <field name="role"/>

                <field name="total_task_count" class="o_report_task_sprint_field"/>
                <field name="task_new_count" class="o_report_task_sprint_field"/>
                <field name="task_dev_count" class="o_report_task_sprint_field"/>
                <field name="task_qc_count" class="o_report_task_sprint_field"/>
                <field name="task_done_count" class="o_report_task_sprint_field"/>

                <field name="sprint_start_date"/>
                <field name="sprint_end_date"/>
            </tree>
        </field>
    </record>

    <record id="action_report_task_sprint" model="ir.actions.act_window">
        <field name="name">Task Sprint Report</field>
        <field name="res_model">report.task.sprint</field>
        <field name="view_mode">tree</field>
        <field name="target">current</field>
    </record>
</odoo>
