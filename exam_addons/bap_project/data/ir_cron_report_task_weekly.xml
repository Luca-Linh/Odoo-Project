<odoo>
    <data noupdate="1">
        <record id="cron_weekly_task_report" model="ir.cron">
            <field name="name">Weekly Task Report</field>
            <field name="model_id" ref="model_bap_project"/>
            <field name="state">code</field>
            <field name="code">model.send_weekly_task_report()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">weeks</field>
            <field name="numbercall">-1</field>
            <field name="nextcall" eval="(datetime.combine(datetime.now(), datetime.min.time()) + timedelta((7 - datetime.now().weekday()) % 7)).replace(hour=8).strftime('%Y-%m-%d %H:%M:%S')"/>
        </record>
    </data>
</odoo>
