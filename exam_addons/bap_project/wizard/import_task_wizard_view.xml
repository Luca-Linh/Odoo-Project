<odoo>
    <data>

        <!-- Form View for Import Task Wizard -->
        <record id="view_import_task_wizard_form" model="ir.ui.view">
            <field name="name">import.task.wizard.form</field>
            <field name="model">import.task.wizard</field>
            <field name="arch" type="xml">
                <form string="Import Tasks">
                    <sheet>
                        <group>
                            <field name="data_file" filename="file_name"/>
                        </group>
                        <field name="file_preview" readonly="1" widget="html"/>
                        <footer>
                            <button name="action_import_task" string="Import Tasks" type="object" class="btn-primary"/>
                            <button string="Cancel" class="btn-secondary" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- Action for Opening the Wizard -->
        <record id="action_import_task_wizard" model="ir.actions.act_window">
            <field name="name">Import Task</field>
            <field name="res_model">import.task.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
